extends layout

block content
  div#outer
    h1 #{title}
    table.klist
      each pv in principlesArray
        tr(class=pv.type)
          td.type(class=pv.type)
            | #{pv.frameworkdisplay}
            br 
            | #{pv.type}
          td.type(class=pv.type) #{pv.id}
          td.text(class=pv.type) #{pv.text}
          - var kwds = '';
          each kwd in pv.keywords
            - kwds = (kwds==''?kwd:kwds + ', ' + kwd);
          td.kwds(class=pv.type)
            | #{kwds}
            br
            form(action='/agileframeworks/keywordEdit?framework=' + pv.framework + '&type=' + pv.type + '&id=' + pv.id, method='GET')
              p 
              input(type='button', name='Edit', value='Edit') 