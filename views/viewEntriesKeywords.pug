extends layout

block content
  div#outer
    a(href="/agileframeworks") Return to main page
    h1 #{title}
    table.klist
      each pv in principlesArray
        tr(class=pv.type)
          td.type(class=pv.type)
            | #{pv.frameworkdisplay}
            br 
          td.type(class=pv.type) #{pv.id}
          td.text(class=pv.type) #{pv.text}
          - var kwds = '';
          if pv.keywords
            each kwd in pv.keywords
              - kwds = (kwds==''?kwd:kwds + ', ' + kwd);
            td.kwds(class=pv.type)
              | #{kwds}
              br
              a(href='/agileframeworks/keywordEdit?framework=' + pv.framework + '&type=' + pv.type + '&id=' + pv.id)
              p Edit keywords