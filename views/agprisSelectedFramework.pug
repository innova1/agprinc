extends layout

block content
  div#outer
    div#menu
      each f in frameworks
        a.menu(href='/agileframeworks/' + f.framework) #{f.frameworkdisplay}
      form(action='/', method='GET')
        p search terms 
        input(type='text', name='title', value='')  
        input(type='submit', value='Submit')
    h1 #{title} for #{f} the #{framework} framework
    table
      each pv in principlesArray
        tr(class=pv.type)
          td.type(class=pv.type) #{pv.id}
          td.text(class=pv.type) #{pv.text}
    p first item of search array is 
    p #{searchMap.get('customer').keyword}
    p length of locations array #{searchMap.get('customer').locations.length}
    p found in framework: #{searchMap.get('customer').locations[0].framework} of type: #{searchMap.get('customer').locations[0].type} with id: #{searchMap.get('customer').locations[0].id}
    p found in framework: #{searchMap.get('customer').locations[1].framework} of type: #{searchMap.get('customer').locations[1].type} with id: #{searchMap.get('customer').locations[1].id}