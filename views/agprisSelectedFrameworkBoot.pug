extends ../node_modules/jade-bootstrap/_bootstrap

block append styles
  style.
    .my-space-grid { 
      margin-bottom: 15px;
    }
    .my-show-grid-ptitle {
      border: 1px solid darkgreen;
    }
    .my-show-grid-ptext {
      border-left: 1px solid darkgreen;
      border-right: 1px solid darkgreen;
      border-bottom: 1px solid darkgreen;
    }
    .ag-title-bgcolor {
      background-color: darkseagreen;
    }
    .ag-text-bgcolor {
      background-color: white;
    }
    .value>.panel-heading { /*value heading color*/
      color: #333;
      background-color: #aaddf7;
     }
    .principle>.panel-heading { /*principle heading color*/
      color: #333;
      background-color: #99e7cc;
     }
     .searchform {
       margin-left  : 20px;
       margin-top: 10px;
       border: 1px solid red;
     }
     
block append scripts
  script.
    var isSmallViewport = window.matchMedia("(max-width: 700px)");
    isSmallViewport.addListener(setMenuCollapsed);
    function setMenuCollapsed(isSmallViewport) {
      if( isSmallViewport.matches ) {
        document.getElementById("sidepanel").classList.remove('show');
        document.getElementById("sidepanel").classList.remove('in');
        console.log("remove show--is small viewport");
      } else {
        document.getElementById("sidepanel").classList.add('show');
        console.log("add show--is NOT small viewport");
      }
    }
    setMenuCollapsed(isSmallViewport);

block body
  nav.navbar.navbar-default
    div.container-fluid
      div.navbar-header
        div.container
          div.col-md-8
            H1 Agile Values and Principles
          div.col-md-4
            form.navbar-form.navbar-left(action='/agileframeworks/search', method='GET')
              input.form-control(type='text', name='searchterms', placeholder='Search Terms')  
              input.btn.btn-default(type='submit', value='Submit')
  //- var defaultCollapsed = isDefaultCollapsed();
  div.container
    div.row
      div.col-md-2
          div.panel.panel-default
            div.panel-heading
              a(href='#sidepanel' data-toggle='collapse')
                h3.panel-title Choose a framework
            div.panel-collapse.collapse.show#sidepanel
              ul.list-group
                each f in frameworks
                  li.list-group-item 
                    a.menu(href='/agileframeworks/' + f.framework) #{f.frameworkdisplay}
      div.col-md-8
        each pv in principlesArray
          div.panel.panel-primary(class=pv.type)
            div.panel-heading
              h3.panel-title #{pv.frameworkdisplay} #{pv.type} #{pv.id}
            div.panel-body
              | #{pv.text}
      div.col-md-2
          div.panel.panel-default
            div.panel-heading
              h3.panel-title Menu
            div.panel-body
              p Here's some text that will be in the panel body above the list group items.

            ul.list-group
              li.list-group-item item 1
              li.list-group-item item 2
              li.list-group-item item 3
