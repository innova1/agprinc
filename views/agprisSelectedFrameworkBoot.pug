extends ../node_modules/jade-bootstrap/_bootstrap

block append styles
  style.
    .my-space-grid { 
      margin-bottom: 15px;
    }
    .my-show-grid {
      border: 1px solid darkgreen;
    }

block body
  div.container
    each pv in principlesArray
        div.row.my-space-grid
          div.col-sm-6
            div.row.bg-success.my-show-grid
              div.col-sm-4
                | #{pv.frameworkdisplay} #{pv.type} #{pv.id}
            div.row.bg-success.my-show-grid
              div.col-sm-4
                | #{pv.text}