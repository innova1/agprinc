extends ../node_modules/jade-bootstrap/_bootstrap

block append styles
  style.
    .my-space-grid { 
      margin-bottom: 15px;
    }
    .my-show-grid-ptitle {
      border: 1px solid darkgreen;
    }
    .my-show-grid-ptext {
      border-left: 1px solid darkgreen;
      border-right: 1px solid darkgreen;
      border-bottom: 1px solid darkgreen;
    }

block body
  div.container
    each pv in principlesArray
        div.row.my-space-grid
          div.col-md-4
            div.row.bg-success
              div.col-md-12.my-show-grid-ptitle
                | #{pv.frameworkdisplay} #{pv.type} #{pv.id}
            div.row.bg-success
              div.col-md-12.my-show-grid-ptext
                | #{pv.text}