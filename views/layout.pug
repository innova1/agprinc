doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    style.
      div#outer {
        width: 850px;
        /*border:1px dotted red;*/
      }
      div#menu {
        //border: 1px solid black;
        background-color: #aaddf7;
        padding: 8px;
        //width: 800px;
      }
      a.menu {
        margin-right: 20px;
        color: black;
        text-decoration: none;
      }
      table.klist { /* for keyword list page */
        border-collapse: collapse;
        border: 1px solid black;
        table-layout: fixed;
        margin-top: 15px;
        width: 800px;
      }
      table.klist th.type, td.type {
        border: 1px solid black;
        padding: 10px;
        text-align: left;
        width: 60px;
      }
      table.klist th.text, td.text {
        border: 1px solid black;
        padding: 10px;
        text-align: left;
        width: 300px;
      }
      table.klist th.kwds, td.kwds {
        border: 1px solid black;
        padding: 10px;
        text-align: left;
        width: 300px;
      }
      table.plist { /* for regular principles list page */
        border-collapse: collapse;
        border: 1px solid black;
        margin-top: 15px;
        width: 800px:
      }
      input.editkeywords[type=text] {
          width: 100%;
          padding: 12px;
          margin: 10px;
          border: 1px solid #ccc;
          border-radius: 4px;
          resize: vertical;
      }
      input.editkeywords[type=submit] {
          background-color: #4CAF50;
          color: white;
          padding: 12px 20px;
          border: none;
          border-radius: 4px;
          cursor: pointer;
          float: right;
      }
      input[type=submit]:hover {
        background-color: #45a049;
      }
      /*
      td.type {
        width: 50;
      }
      */
      th, td {
        border: 1px solid black;
        padding: 10px;
        text-align: left;
      }
      tr.value {
        background-color: #aaddf7;
      }
      tr.principle {
        background-color: #99e7cc;
      }
